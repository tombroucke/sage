{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "useRootPaddingAwareAlignments": true,

    "layout": {
      "contentSize": "768px",
      "wideSize": "1320px"
    },

    "color": {
      "palette": [
        {
          "name": "Primary",
          "slug": "primary",
          "color": "#0d6efd"
        },
        {
          "name": "Light",
          "slug": "light",
          "color": "#f5f5f5"
        },
        {
          "name": "White",
          "slug": "white",
          "color": "#ffffff"
        },
        {
          "name": "Dark",
          "slug": "dark",
          "color": "#212529"
        }
      ],
      "custom": false,
      "customGradient": false,
      "defaultPalette": false,
      "defaultGradients": false
    },

    "custom": {
      "spacing": {
        "small": "max(1.25rem, 5vw)",
        "medium": "clamp(2rem, 8vw, calc(4 * var(--wp--style--block-gap)))",
        "large": "clamp(4rem, 10vw, 8rem)"
      },
      "typography": {
        "font-size": {},
        "line-height": {}
      }
    },

    "spacing": {
      "padding": true,
      "units": ["px", "%", "em", "rem", "vw", "vh"]
    },

    "typography": {
      "customFontSize": false
    },

    "blocks": {
      "core/group": {
        "background": {
          "backgroundImage": true
        }
      },

      "acf/container": {
        "background": {
          "backgroundImage": true
        }
      }
    }
  },

  "styles": {
    "spacing": {
      "padding": {
        "top": "0px",
        "right": "var(--wp--custom--spacing--small, 1.25rem)",
        "bottom": "0px",
        "left": "var(--wp--custom--spacing--small, 1.25rem)"
      }
    },

    "blocks": {
      "core/columns": {
        "spacing": {
          "margin": {
            "top": "0px",
            "bottom": "0px"
          }
        }
      },

      "core/image": {
        "spacing": {
          "margin": {
            "top": "0px",
            "bottom": "0px"
          }
        }
      }
    }
  }
}
