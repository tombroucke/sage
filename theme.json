{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "useRootPaddingAwareAlignments": true,

    "layout": {
      "contentSize": "768px",
      "wideSize": "1320px"
    },

    "color": {
      "palette": [
        {
          "name": "Primary",
          "slug": "primary",
          "color": "#0d6efd"
        },
        {
          "name": "Light",
          "slug": "light",
          "color": "#f5f5f5"
        },
        {
          "name": "White",
          "slug": "white",
          "color": "#ffffff"
        },
        {
          "name": "Dark",
          "slug": "dark",
          "color": "#212529"
        }
      ],
      "custom": false,
      "customGradient": false,
      "defaultPalette": false,
      "defaultGradients": false
    },

    "custom": {
      "spacing": {
        "small": "max(1.25rem, 5vw)",
        "medium": "clamp(2rem, 8vw, calc(4 * var(--wp--style--block-gap)))",
        "large": "clamp(4rem, 10vw, 8rem)"
      },
      "typography": {
        "font-size": {},
        "line-height": {}
      }
    },

    "spacing": {
      "padding": true,
      "units": ["px", "%", "em", "rem", "vw", "vh"],
      "defaultSpacingSizes": false,
      "spacingSizes": [
        {
          "size": "0.44rem",
          "slug": "20",
          "name": "2X-small"
        },
        {
          "size": "0.67rem",
          "slug": "30",
          "name": "X-small"
        },
        {
          "size": "1rem",
          "slug": "40",
          "name": "Small"
        },
        {
          "size": "clamp(1rem, 1.5vw, 1.5rem)",
          "slug": "50",
          "name": "Medium"
        },
        {
          "size": "clamp(2.5rem, 3.5vw, 3.5rem)",
          "slug": "60",
          "name": "Large"
        },
        {
          "size": "clamp(3.5rem, 6vw, 5rem)",
          "slug": "70",
          "name": "X-large"
        },
        {
          "size": "clamp(4.5rem, 8vw, 6.5rem)",
          "slug": "80",
          "name": "2X-large"
        }
      ]
    },

    "typography": {
      "customFontSize": false,
      "fontSizes": [
				{
					"name": "Small",
					"slug": "small",
					"size": "13px"
				},
				{
					"name": "Medium",
					"slug": "medium",
					"size": "20px"
				},
				{
					"name": "Large",
					"slug": "large",
					"size": "36px"
				},
				{
					"name": "Extra Large",
					"slug": "x-large",
					"size": "42px"
				}
      ]
    },

    "blocks": {
      "core/group": {
        "background": {
          "backgroundImage": true
        }
      }
    }
  },

  "styles": {
    "spacing": {
      "padding": {
        "top": "0px",
        "right": "var(--wp--custom--spacing--small, 1.25rem)",
        "bottom": "0px",
        "left": "var(--wp--custom--spacing--small, 1.25rem)"
      }
    },

    "blocks": {
      "core/columns": {
        "spacing": {
          "margin": {
            "top": "0px",
            "bottom": "0px"
          }
        }
      },

      "core/image": {
        "spacing": {
          "margin": {
            "top": "0px",
            "bottom": "0px"
          }
        }
      }
    }
  }
}
