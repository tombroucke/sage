{
  "name": "sage",
  "private": true,
  "bud": {
    "location": {
      "src": "resources",
      "dist": "public"
    }
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "bud dev",
